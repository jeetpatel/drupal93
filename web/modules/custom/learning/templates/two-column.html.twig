{% if content %}
  <div {{ attributes.addClass('learning-two-column') }}>
    {% if content.main %}
      <div {{ region_attributes.main.addClass('content-main-region') }}>
        {{ content.main }}
      </div>
    {% endif %}
    {% if content.sidebar %}
      <div {{ region_attributes.sidebar.addClass('learning-sidebar-region') }}>
        {{ content.sidebar }}
      </div>
    {% endif %}
  </div>
{% endif %}
